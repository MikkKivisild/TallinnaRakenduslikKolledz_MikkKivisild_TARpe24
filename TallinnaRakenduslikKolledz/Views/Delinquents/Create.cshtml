@model TallinnaRakenduslikKolledz.Models.Delinquent

<h1>Create a delinquent</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			 
			<div class="form-group">
				<label asp-for="Id" class="hidden"></label>
				<input asp-for="Id" class="form-control" />
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Violation" class="control-label"></label>
				<input asp-for="Violation" class="form-control" />
				<span asp-validation-for="Violation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Violator" class="control-label"></label>
				<input asp-for="Violator" class="form-control" />
				<span asp-validation-for="Violator" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Add" class="btn btn-primary" style="margin-top:8px" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="Index" class="btn btn-primary" style="margin-top:5px">Back</a>
</div>